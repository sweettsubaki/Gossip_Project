<div class="container">
	<div class="row">
		<div class="col-6 mx-auto">
			
			<h3 class="card-title text-center m-4">Editer un commentaire</h3>

			
			<%= form_tag url_for(action: 'update'), method: "patch" do %>
			<%= label_tag 'Content' %>
			<%= text_area_tag 'content', @comment.content, class: "form-control" %>
			<br/>

			<%= submit_tag "Confirmer", class: "btn btn-primary" %>
			
			<%= link_to "Supprimer le commentaire", gossip_comment_path, data: {confirm: "Supprimer le commentaire ?"}, method: "delete", class: "btn btn-danger mb-0 ml-2" %>
			<% end %>

			
			<% if @comment.errors.any? %>

			<div class="alert alert-danger alert-dismissible fade show m-4" role="alert">
				<p><strong>ERREUR ! Voici les raisons :</strong></p>
				<ul>
					<% @comment.errors.full_messages.each do |message| %>
					<li><%= message %></li>
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
					<% end %>
				</ul>
			</div>

			<% end %>

		</div>
	</div>
</div>